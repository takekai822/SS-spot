<div class="container">
  <div class="row py-4">
    <div class="col-8 mx-auto">
      <div class="text-center">
        <!--プロフィール画像の表示-->
        <div>
          <%= image_tag @user.get_profile_image,size: "100x100", class: "rounded-circle" %>
        </div>
        <!--ユーザーネーム-->
        <div class="mt-3">
          <%= @user.user_name %>
        </div>
        <div class="text-right">
          <%= link_to "管理", edit_admin_user_path(@user), class: "btn btn-light" %>
        </div>
      </div>
    </div>
  </div>
  <div class="row py-4">
    <div class="col-12 mx-auto">
      <!--@userが投稿をしているかを確認-->
      <% if @user.posts.exists? %>
        <!--存在している場合、@userの投稿一覧表示-->
        <div class="row">
          <%= render "admin/posts/index", posts: @posts %>
        </div>
        <!--ページネーション-->
        <div class="row">
          <div class="mx-auto">
            <%= paginate @posts %>
          </div>
        </div>
      <% else %>
        <p class="text-center">投稿はありません</p>
      <% end %>
    </div>
  </div>
</div>