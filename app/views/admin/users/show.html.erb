<div class="background container py-5 rounded">
  <div class="row py-3">
    <div class="col-8 mx-auto">
      <div class="text-center">
        <!--プロフィール画像の表示-->
        <div>
          <%= image_tag @user.get_profile_image,size: "150x150", class: "rounded-circle" %>
        </div>
        <!--ユーザーネーム-->
        <div class="mt-3">
          <%= @user.user_name %>
        </div>
        <div class="text-right">
          <%= link_to "管理", edit_admin_user_path(@user), class: "button-gray btn" %>
        </div>
      </div>
    </div>
  </div>

  <!--ユーザーの投稿一覧-->
  <div class="row pt-3">
    <div class="col-11 mx-auto">
      <!--@userが投稿をしているかを確認-->
      <% if @user.posts.exists? %>
        <!--存在している場合、@userの投稿一覧表示-->
        <%= render "admin/posts/index", posts: @posts %>

        <!--ページネーション-->
        <div class="row mt-5">
          <div class="mx-auto">
            <%= paginate @posts %>
          </div>
        </div>
      <% else %>
        <p class="text-center">投稿はありません</p>
      <% end %>
    </div>
  </div>
</div>