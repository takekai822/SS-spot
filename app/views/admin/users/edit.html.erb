<div class="container py-5 bg-light rounded">
  <div class="row">
    <div class="col-10 mx-auto">
      <div>
        <%= image_tag @user.get_profile_image, size: "100x100" %>
      </div>
      <div>
        <%= @user.name %>(<%= @user.name_kana %>)
      </div>
      <div>
        <%= @user.user_name %>
      </div>
      <div>
        <%= @user.email %>
      </div>
      <%= form_with model: @user, url: admin_user_path(@user), method: :patch do |f| %>
        <div class="form_group-row">
          <%= f.label :会員ステータス %>
          <%= f.radio_button :is_deleted, false %>
          <%= f.label :is_deleted, "有効" %>
          <%= f.radio_button :is_deleted, true %>
          <%= f.label :is_deleted, "退会" %>
        </div>
        <div>
          <%= f.submit "ステータス更新" %>
        </div>
      <% end %>
    </div>
  </div>
</div>