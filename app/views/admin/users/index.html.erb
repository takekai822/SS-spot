<div class="background container py-5 rounded">
  <div class="row">
    <div class="col-10 mx-auto">
      <table class="table table-hover">
        <thead>
          <tr>
            <th></th>
            <th>
              ユーザー名(フリガナ)
            </th>
            <th>
              ユーザーネーム
            </th>
            <th>
              投稿数
            </th>
            <th>
              ユーザーステータス
            </th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td>
                <%= link_to admin_user_path(user) do %>
                <%= image_tag user.get_profile_image, size: "50x50" %>
                <% end %>
              </td>
              <td>
                <%= user.name %>(<%= user.name_kana %>)
              </td>
              <td>
                <%= user.user_name %>
              </td>
              <td>
                <%= user.posts.count %>
              </td>
              <td>
                <% if user.is_deleted == true %>
                  <p>退会</p>
                <% else %>
                  <p>有効</p>
                <% end %>
              </td>

            </tr>

          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>