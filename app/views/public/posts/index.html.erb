<div class="background container py-5 rounded">
  <div class="row">
    <div class="col-10 mx-auto">
      <!--タイトル-->
      <div class="row">
        <div class="title p-2 rounded">
          <% if params[:tag_name] %>
            <h2 class="mx-2 my-0">#<%= "#{params[:tag_name]}" %></h2>
          <% else %>
            <h2 class="mx-2 my-0">投稿一覧</h2>
          <% end %>
        </div>
      </div>

      <!--並び替えリンク-->
      <p class="text-right my-4">
        <%= link_to "新着順", posts_path(latest: "true"), class: "button-blue btn btn-sm nav-item" %>
        <%= link_to "古い順", posts_path(old: "true"), class: "button-blue btn btn-sm nav-item" %>
        <%= link_to "いいねの多い順", posts_path(favorite: "true"), class: "button-blue btn btn-sm nav-item" %>
      </p>

      <!--投稿一覧-->
      <div>
        <%= render "public/posts/index", posts: @posts %>
      </div>

      <!--ページネーション-->
      <div class="row mt-5">
        <div class="mx-auto">
          <%= paginate @posts %>
        </div>
      </div>
    </div>
  </div>
</div>