<div class="container">
  <div class="row">
    <div class="col-6 mx-auto">
      <h2>プロフィール編集</h2>
      <%= form_with model: @user, url: user_path(@user), method: :patch do |f| %>
        <%= render 'layouts/error_messages', model: @user %>
        <%= render "public/registrations/info", f: f %>
        <div class="actions">
          <%= f.submit "更新", class: "btn btn-outline-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>