<% if post.favorited_by?(current_user) %>
  <%= link_to post_favorites_path(post), method: :delete, remote: true, class: "text-danger favorite-btn", style: "text-decoration: none;"  do %>
    <i class="fas fa-heart"></i><%= post.favorites.count %>いいね
  <% end %>
<% else %>
  <%= link_to post_favorites_path(post), method: :post, remote: true, class: "favorite-btn text-dark", style: "text-decoration: none;" do %>
    <i class="far fa-heart"></i><%= post.favorites.count %>いいね
  <% end %>
<% end %>